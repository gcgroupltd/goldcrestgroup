{% assign banner = shop.metaobjects.banner.first %}
{% assign images = banner.images %}

<style>
.advert { 
  max-width: 1440px;
  margin: 0 auto;
}

.advert a {
  width: 100%;
  font-size: 50px;
  text-align: center;
  display: block;
  text-decoration: none;
  padding: 15px 0;
}

.advert--image a {
  padding: 0;
  margin: 0;
  background: none !important;
  border: none !important;
}

.advert--image a:hover {
    background: none !important;
  border: none !important;
}

.advert img {
  max-widtH: 100%;
}

.advert .desktop-image {
  display: none;
}

@media screen and (max-width: 768px) {
  .advert a {
    font-size: 25px;
  }

  .advert .mobile-image {
    display: none;
  }

  .advert .desktop-image {
    display: block;
  }
}
</style>

<div class="advert {% if section.settings.use_image %}advert--image{% else %}advert--text{% endif %}">
    <a href="{{ section.settings.external }}" class="button button--primary">
      {% if section.settings.use_image %}
        <img src="{{ section.settings.mobile_image | image_url}}" alt="" class="mobile-image">
        <img src="{{ section.settings.desktop_image | image_url}}" alt="" class="desktop-image">
      {% else %}
        {{ section.settings.text }}
      {% endif %}
    </a>
</div>


{% schema %}
{
  "name": "Advert",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_image",
      "label": "Use image instead of text",
      "default": false
    },
    {
      "type": "text",
      "label": "Text",
      "id": "text",
      "default": "Offers now on. Book Now!"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image",
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image",
    },
    {
      "type": "url",
      "label": "External Link",
      "id": "external"
    }
  ],
  "presets": [
    {
      "name": "Advert"
    }
  ]
}
{% endschema %}
